{
	"name": "sse-ws_ne",
	"version": "1.4.4",
	"main": "./src/index.js",
	"license": "MIT",
	"private": true,
	"engines": {
		"node": ">=18.17.1",
		"yarn": ">=1.22.19"
	},
	"workspaces": [
		"src/app/frontend",
		"src/app/backend"
	],
	"devDependencies": {},
	"scripts": {
		"lint": "eslint .",
		"build": "webpack --config ./webpack.prod.js",
		"build:dev": "webpack --mode=development --config ./webpack.dev.js",
		"start:build:dev": "yarn workspaces run build:dev",
		"watch": "webpack --watch",
		"serve:reserv": "yarn tsc src/app/serwiceWorker/src/index.ts",
		"start:rezerv": "npx tsc --init && yarn tsc src/app/db/index.ts && yarn tsc src/app/backend/src/serve/index.ts",
		"start:front": "cd src\\app\\frontend && webpack serve --port=8080",
		"start:back": "nodemon dist/backend/server.js localhost 7070 --ignore src/",
		"start": "yarn run start:build:dev && yarn run start:back && yarn run start:front",
		"unit": "jest --env=jsdom  --watch --colors --config ./unit.config.js",
		"e2e": "jest --env=jest-environment-jsdom  --watch --colors --config ./puppeteer.config.js ",
		"serve-test": "webpack serve --port=9000 "
	},
	"description": "sse-ws_ne",
	"dependencies": {
		"hexoid": "^1.0.0"
	},
	"repository": "https://github.com/Tryd0g0lik/sse-ws_ne.git",
	"author": "Tryd0g0lik <work80@mail.ru>"
}
